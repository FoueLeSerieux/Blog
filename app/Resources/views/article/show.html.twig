{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - {{ article.title }}{% endblock %}

{% block body %}
	 <!-- Page Header -->
	<!-- Set your background image for this header on the line below. -->
	<header class="intro-header" style="background-image: url('{{ articleImagePath }}')">
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
					<div class="post-heading">
						<h1>{{ article.title }}</h1>
						<h2 class="subheading">Subtitle</h2>
						<span class="meta">Posted by {{ article.author }} on {{ article.createdAt.format('d-m-Y H:i') }}</span>
					</div>
				</div>
			</div>
		</div>
	</header>

	{{ parent() }}

	<!-- Post Content -->
	<article>
		<div class="container">
			<div class="row">
				<div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
					{{ article.content }}
				</div>
			</div>
		</div>
	</article>

	<hr>

{% endblock %}